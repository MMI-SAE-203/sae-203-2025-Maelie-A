---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/card.astro';
import { getFilm } from '../../../backend/backend.mjs';
const Film = await getFilm();
console.log(Film);
---

<Layout>
  <div class="bg-[rgb(238_242_255)]">
    <div class="container py-20 space-y-8">
      <h1 class="font-sans text-pink-500 text-center">Programme</h1>

<div 
                x-bind:class="view === 'grid' ? 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6' : 'flex flex-col space-y-4 w-full max-w-3xl'"
                class="w-full">
                {Film && Film.map((Film) => (
                    <Card {...Film} />
                ))}
            </div>
    </div>
  </div>
</Layout>