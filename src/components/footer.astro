---
import Logo from '../assets/logo.svg';
import instagram from '../assets/instagram.svg';
import facebook from '../assets/facebook.svg';
import youtube from '../assets/youtube.svg';
---

<footer class=" bg-purple-950 w-full text-white py-8 px-4 text-sm">
<div class="w-full flex flex-col items-center">



    <!-- Titre principal -->
    <h2 class="font-sans text-2xl font-bold text-center mb-6">
      Plongez dans l'univers de l'animation à Belfort !
    </h2>

    <!-- Section réseaux sociaux -->
    <div class="flex flex-col items-center mb-6">
      <p class="text-lg font-bold mb-2">Suivez-nous :</p>
      <div class="flex gap-4">
        <a href="#" aria-label="Instagram" class="transition-colors flex items-center justify-center w-10 h-10">
          <img src={instagram.src}" alt="Instagram" class="h-10 w-10" />
        </a>
        <a href="#" aria-label="Facebook" class="transition-colors flex items-center justify-center w-10 h-10">
          <img src={facebook.src} alt="Facebook" class="h-10 w-10" />
        </a>
        <a href="#" aria-label="YouTube" class="transition-colors flex items-center justify-center w-10 h-10">
          <img src={youtube.src} alt="YouTube" class="h-10 w-10" />
        </a>
      </div>
    </div>

    <!-- Section contact -->
    <div class="flex flex-col items-center mb-6">
      <p class="text-lg font-bold mb-2">Contact :</p>
      <a href="mailto:lionimation@festival.com" class="text-md hover:text-pink-500 transition-colors">
        lionimation@festival.com
      </a>
      <p class="text-md mb-2">+33 1 23 45 67 89</p>
      <p class="text-md text-center">
        Lionimation Festival, Place de la République, 90000 Belfort, France
      </p>
    </div>

    <!-- Logo du festival -->
    <div class="mb-8">
      <img src={Logo.src} alt="Lionimation Festival" class="w-50 h-auto" />
    </div>

    <!-- Mentions légales -->
    <div class="font-mono text-center text-xs">
      <p>© 2024 Lionimation Festival - Tous droits réservés</p>
      <p class="mt-1">
        <a href="#" class="hover:underline">Mentions Légales</a> | 
        <a href="#" class="hover:underline">Politique de confidentialité</a> | 
        <a href="#" class="hover:underline">Conditions générales</a>
      </p>
    </div>
  </div>
</footer>